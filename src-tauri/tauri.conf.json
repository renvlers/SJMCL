{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SJMCL",
  "version": "0.0.0",
  "identifier": "SJMCL",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "",
        "url": "/",
        "width": 800,
        "height": 550,
        "minWidth": 800,
        "minHeight": 550,
        "center": true,
        "dragDropEnabled": false
      },
      {
        "label": "game_error",
        "create": false,
        "title": "Game Error",
        "url": "/standalone/game-error",
        "width": 800,
        "height": 550,
        "minWidth": 640,
        "minHeight": 440,
        "center": true,
        "dragDropEnabled": false
      },
      {
        "label": "game_log",
        "create": false,
        "title": "Game Log",
        "url": "/standalone/game-log",
        "width": 800,
        "height": 550,
        "minWidth": 640,
        "minHeight": 440,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**",
          "**/.minecraft/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "assets/icons/32x32.png",
      "assets/icons/64x64.png",
      "assets/icons/128x128.png",
      "assets/icons/128x128@2x.png",
      "assets/icons/icon.icns",
      "assets/icons/icon.ico",
      "assets/icons/icon.png"
    ],
    "licenseFile": "../LICENSE",
    "license": "GPLv3",
    "macOS": {
      "dmg": {
        "background": "assets/misc/dmg_bg.png",
        "windowSize": {
          "width": 640,
          "height": 440
        }
      }
    },
    "resources": [
      "assets/skins/*",
      "assets/game/*",
      "assets/icons/icon.ico",
      "assets/icons/icon.png"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "sjmcl"
        ]
      }
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
